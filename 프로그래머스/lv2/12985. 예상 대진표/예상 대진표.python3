def solution(n,a,b):
    answer = 0
    
    while True:
        answer += 1
        if a + 1 == b or a - 1 == b:
            break
        a = int((a+1)/2)
        b = int((b+1)/2)
        
    while True:
        if max(a, b)%2 != 0:
            a = int((a+1)/2)
            b = int((b+1)/2)
            answer += 1
        else:
            break
    
    return answer